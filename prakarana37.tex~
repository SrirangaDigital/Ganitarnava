(5) &  7\dfrac{1}{2}\times 2\dfrac{4}{45}\; \text{ra}  \dfrac{3}{47} & (6) &  4\dfrac{2}{7}\; \text{ra}\;  \dfrac{11}{34}\times2 \dfrac{1}{2}\\[20pt]

(7) &  \dfrac{1}{7}\; \text{ra}\; 2 \dfrac{1}{5}\times3 \dfrac{2}{11} & (8) & 4\dfrac{1}{6}\times \dfrac{2}{5}\; \text{ra}  \dfrac{7}{10}\times 2\dfrac{1}{10}\\[20pt]

(9) & 3\dfrac{1}{5}\; \text{ra}\; 2 \dfrac{1}{4}\times2 \dfrac{2}{9}\; \text{ra}\; 3 \dfrac{4}{5} & (10) &  \dfrac{2}{13}\; \text{ra}\; 3 \dfrac{7}{15}\; \text{ra}\; 2\times  \dfrac{2}{9}\; \text{ra}\;  \dfrac{3}{5}\\[20pt]

