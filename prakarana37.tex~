\begin{enumerate}[\rm(1)]
\item $2\dfrac{1}{8}$\; ra\; $\dfrac{2}{7}\times\dfrac{1}{10}$\; ra $18\dfrac{4}{5}$

\item $\dfrac{1}{8}$\; ra\; $4\dfrac{2}{7}$\; ra\; $\dfrac{14}{15}\times 16\dfrac{2}{3}\times 2\dfrac{2}{5}\times \dfrac{1}{7}$\; ra\; $3\dfrac{5}{24}\times \dfrac{2}{11}$

\item $7\dfrac{1}{2}$\; ra\; $2\dfrac{2}{9}\times3\dfrac{1}{4}$\; ra\; $7\dfrac{1}{5}\times 21\dfrac{1}{7}$\; ra\; $7\dfrac{5}{37}\times\dfrac{3}{8}$ ra $15\dfrac{3}{7}$

\item $\dfrac{1}{2}$\; ra\; $\dfrac{2}{3}\times 5\dfrac{3}{8}$\; ra\; $3$

\item $\dfrac{11}{15}$\; ra\; $1\dfrac{3}{22}$\; ra\; $\dfrac{1}{70}\times\dfrac{7}{12}$\; ra\; $37\dfrac{14}{35}$\; ra\; $3\dfrac{1}{8}$ ra\; $\dfrac{1}{11}$

\item $\dfrac{10}{19}$\; ra\; $\dfrac{3}{11}\times 3\dfrac{5}{87}$\; ra\; $1\dfrac{1}{63}\times\dfrac{3}{8}$\; ra\; $2\dfrac{1}{16}$

\item $5\dfrac{2}{19}$\; ra\; $3\dfrac{1}{4}$\; ra\; $\dfrac{8}{117}$\; ra\;  $34\times\dfrac{3}{194}$\; ra\; $\dfrac{9}{68}$\; ra\; $1\dfrac{1}{3}$\; ra\; $19$ 

\item $\dfrac{12}{13}$\; ra\; $3\dfrac{2}{3}\times 1\dfrac{1}{33}$\; ra\; $\dfrac{39}{51}$\; ra\; $\dfrac{3}{8}$

\item $2\dfrac{2}{15}\times 2\dfrac{2}{3}$\; ra\; $1\dfrac{7}{37}\times\dfrac{33}{42}\times\dfrac{19}{328}\times5\dfrac{1}{22}$\; ra\; $49 \times \dfrac{3}{76}$

\item $\dfrac{95}{116}\times\dfrac{17}{21}\times\dfrac{126}{190}\times\dfrac{87}{153}\times\dfrac{4}{7}$\; ra\;  $1\dfrac{2}{5}$

\item $\dfrac{1764}{1491} \times \dfrac{147}{196} \times \dfrac{355}{529} \times \dfrac{207}{507} \times 1\dfrac{110}{189}$ ra $\dfrac{13}{5}$
\end{enumerate}

\eject

